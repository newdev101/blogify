<h3>SignIN </h3>

<form action="/user/signin" method="post">
     <label for="username">
          <b>UserName</b>
     </label>
     <input 
     type="text" 
     placeholder="username.."
     name="username"
     >


     <label for="password">
          <b>Password</b>
     </label>
     <input 
     type="password" 
     placeholder="enter password"
     name="password"
     >

     <input type="submit" value="Login" class="btn">
</form>



<h3>Register </h3>

<form action="/user/signup" method="post">
     <label for="username">
          <b>UserName</b>
     </label>
     <input 
     type="text" 
     placeholder="username.."
     name="username"
     >


     <label for="email">
          <b>Email</b>
     </label>
     <input 
     type="text" 
     placeholder="name@gmail.com"
     name="email"
     >

     <label for="password">
          <b>Password</b>
     </label>
     <input 
     type="password" 
     placeholder="enter password"
     name="password"
     >

     <input type="submit" value="Signup" class="btn">
</form>